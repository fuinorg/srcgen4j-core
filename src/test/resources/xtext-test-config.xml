<?xml version="1.0" encoding="UTF-8"?>
<srcgen4j-config
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns="http://www.fuin.org/srcgen4j/commons"
   xmlns:xtext="http://www.fuin.org/srcgen4j/core/xtext">
	
	<variables>
		<variable name="testRes" value="src/test/resources" />
	</variables>
	
	<projects>
		<project name="current" path="." maven="false">
			<folder name="testJava" path="target/test-data" create="true" override="true" clean="false" />
		</project>
	</projects>
	
	<parsers>
		<parser name="ptp" class="org.fuin.srcgen4j.core.xtext.XtextParser">
			<config>
				<xtext:xtext-parser modelPath="${testRes}" modelExt="xsdsl"
				                    setupClass="org.fuin.xsample.XSampleDslStandaloneSetup" />
			</config>
		</parser>
	</parsers>
	
	<generators>
		<generator name="gen1" class="org.fuin.srcgen4j.core.xtext.XtextGenerator" 
		           parser="ptp" project="current" folder="testJava">
		    <config>
				<xtext:xtext-generator templatePath="${testRes}" />
			</config>
			<artifact name="file" />
		</generator>
	</generators>
	
</srcgen4j-config>
